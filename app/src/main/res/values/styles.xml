<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="app_title">

        <item name="android:fontFamily">@font/bubblegum_sans</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="loadingDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/loadingDialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="background">@color/loadingDialog</item>
    </style>
</resources>